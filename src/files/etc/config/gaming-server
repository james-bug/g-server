# UCI Configuration for gaming-server
# /etc/config/gaming-server

config server 'main'
	option enabled '1'
	option ws_port '8080'
	option cec_device '/dev/cec0'
	option subnet '192.168.1.0/24'
	option cache_path '/var/run/gaming/ps5_cache.json'
	option log_level 'info'

config ps5 'detection'
	option enabled '1'
	option scan_interval '60'
	option scan_timeout '30'
	option cache_timeout '3600'

config cec 'monitor'
	option enabled '1'
	option device '/dev/cec0'
	option poll_interval '100'

config websocket 'server'
	option enabled '1'
	option port '8080'
	option max_clients '10'
	option ping_interval '30'
